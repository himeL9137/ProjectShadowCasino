        public CalculationResult ProcessExpression(string expression)
        {
            try
            {
                // Simple expression evaluation (in real app, use proper math parser)
                var result = EvaluateExpression(expression);
                
                return new CalculationResult
                {
                    Success = true,
                    Result = result,
                    Expression = expression,
                    IsPerfectGuess = (result % 1 == 0) // Perfect integer result
                };
            }
            catch (Exception ex)
            {
                return new CalculationResult
                {
                    Success = false,
                    Error = ex.Message,
                    Expression = expression
                };
            }
        }

        private decimal EvaluateExpression(string expression)
        {
            // Simple calculator logic - in production use proper math parser
            expression = expression.Replace(" ", "");
            
            // Handle basic operations
            if (expression.Contains("+"))
            {
                var parts = expression.Split('+');
                return decimal.Parse(parts[0]) + decimal.Parse(parts[1]);
            }
            else if (expression.Contains("-"))
            {
                var parts = expression.Split('-');
                return decimal.Parse(parts[0]) - decimal.Parse(parts[1]);
            }
            else if (expression.Contains("*"))
            {
                var parts = expression.Split('*');
                return decimal.Parse(parts[0]) * decimal.Parse(parts[1]);
            }
            else if (expression.Contains("/"))
            {
                var parts = expression.Split('/');
                return decimal.Parse(parts[0]) / decimal.Parse(parts[1]);
            }
            
            return decimal.Parse(expression);
        }

        public void SetBetAmount(decimal amount)
        {
            betAmount = Math.Max(30, Math.Min(2000, amount));
        }

        public static void Main(string[] args)
        {
            var calculator = new AdvancedCalculator();
            Console.WriteLine("C# Advanced Calculator Game initialized!");
            Console.WriteLine(calculator.GenerateWebInterface());
        }
    }
