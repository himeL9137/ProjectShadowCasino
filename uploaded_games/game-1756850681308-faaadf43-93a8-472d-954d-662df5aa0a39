        window.newChallenge = () => calculatorGame.newChallenge();
        window.submitAnswer = () => calculatorGame.submitAnswer();
        window.setBet = () => calculatorGame.setBet();

        console.log('C# Advanced Calculator game initialized!');
    </script>
