        class CSharpCalculatorGame {
            constructor() {
                this.currentExpression = '';
                this.betAmount = 30;
                this.challengeExpression = '';
                this.challengeAnswer = 0;
                this.currentDisplay = '0';
            }

            addToDisplay(value) {
                if (this.currentDisplay === '0' && value !== '.') {
                    this.currentDisplay = value;
                } else {
                    this.currentDisplay += value;
                }
                this.updateDisplay();
            }

            clearDisplay() {
                this.currentDisplay = '0';
                this.updateDisplay();
            }

            deleteLast() {
                if (this.currentDisplay.length > 1) {
                    this.currentDisplay = this.currentDisplay.slice(0, -1);
                } else {
                    this.currentDisplay = '0';
                }
                this.updateDisplay();
            }

            calculate() {
                try {
                    // Replace display symbols with JS operators
                    let expression = this.currentDisplay.replace(/√ó/g, '*').replace(/√∑/g, '/');
                    let result = eval(expression);
                    this.currentDisplay = result.toString();
                    this.updateDisplay();
                } catch (error) {
                    this.currentDisplay = 'Error';
                    this.updateDisplay();
                    setTimeout(() => {
                        this.currentDisplay = '0';
                        this.updateDisplay();
                    }, 2000);
                }
            }

            updateDisplay() {
                document.getElementById('display').textContent = this.currentDisplay;
            }

            newChallenge() {
                // Generate random math challenge
                const operations = ['+', '-', '*', '/'];
                const num1 = Math.floor(Math.random() * 50) + 1;
                const num2 = Math.floor(Math.random() * 20) + 1;
                const operation = operations[Math.floor(Math.random() * operations.length)];
                
                this.challengeExpression = `${num1} ${operation} ${num2}`;
                
                // Calculate correct answer
                try {
                    this.challengeAnswer = eval(this.challengeExpression);
                    if (operation === '/') {
                        this.challengeAnswer = Math.round(this.challengeAnswer * 100) / 100;
                    }
                } catch (error) {
                    this.challengeAnswer = 0;
                }
                
                document.getElementById('challenge').innerHTML = `
                    <strong>Calculate: ${this.challengeExpression} = ?</strong><br>
                    <small>Use the calculator and submit your answer!</small>
                `;
            }

            submitAnswer() {
                if (!this.challengeExpression) {
                    document.getElementById('gameResult').innerHTML = 
                        '<span style=""color: orange;"">Start a new challenge first!</span>';
                    return;
                }

                const userAnswer = parseFloat(this.currentDisplay);
                const tolerance = 0.01; // Allow small floating point differences
                const isCorrect = Math.abs(userAnswer - this.challengeAnswer) < tolerance;

                document.getElementById('gameResult').innerHTML = `
                    <p>Challenge: ${this.challengeExpression}</p>
                    <p>Correct Answer: ${this.challengeAnswer}</p>
                    <p>Your Answer: ${userAnswer}</p>
                    <p style=""color: ${isCorrect ? 'lightgreen' : 'lightcoral'};"">
                        ${isCorrect ? 'üéâ Correct! You won!' : '‚ùå Wrong answer. Better luck next time!'}
                    </p>
                `;

                // Send result to casino API
                if (window.casinoAPI) {
                    window.casinoAPI.placeBet(this.betAmount, isCorrect);
                }
            }

            setBet() {
                const betInput = document.getElementById('betInput');
                this.betAmount = Math.max(30, Math.min(2000, parseInt(betInput.value) || 30));
                betInput.value = this.betAmount;
            }
        }

        const calculatorGame = new CSharpCalculatorGame();

        // Global functions for HTML onclick events
        window.addToDisplay = (value) => calculatorGame.addToDisplay(value);
        window.clearDisplay = () => calculatorGame.clearDisplay();
